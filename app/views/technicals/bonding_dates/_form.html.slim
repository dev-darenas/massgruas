= form_with(model: [@technical, @bonding_date], local: true) do |form|
  - if @bonding_date.errors.any?
    #error_explanation
      h2 = pluralize(@bonding_date.errors.count, "error")
        | prohibited this bonding_date from being saved:

      ul
        - @bonding_date.errors.full_messages.each do |message|
          li = message

  .field
    = form.label :entry_date
    = form.date_field :entry_date, class: 'form-control'

  .field
    = form.label :departure_date
    = form.date_field :departure_date, class: 'form-control'

  .field
