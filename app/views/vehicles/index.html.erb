<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table class="table">
  <thead>
  <tr>
    <th>Placa</th>
    <th>Licencia</th>
    <th>Clase</th>
    <th>Marca</th>
    <th>Tipo</th>
    <th>Linea</th>
    <th>Servicio</th>
    <th>Combustible</th>
    <th>Color</th>
    <th>Modelo</th>
    <th>Motor</th>
    <th>Chasis</th>
    <th>Serie</th>
    <th>Fecha de compra</th>
    <th>Contrato</th>
    <th>Número de SOAT</th>
    <th>Vencimiento de SOAT</th>
    <th>Número de RTM</th>
    <th>Vencimiento RTM</th>
    <th>Km de cambio de aceite</th>
    <th>Km de proximo cambio</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @vehicles.each do |vehicle| %>
    <tr>
      <td><%= vehicle.placa %></td>
      <td><%= vehicle.licencia %></td>
      <td><%= vehicle.clase %></td>
      <td><%= vehicle.marca %></td>
      <td><%= vehicle.tipo %></td>
      <td><%= vehicle.linea %></td>
      <td><%= vehicle.servicio %></td>
      <td><%= vehicle.combustible %></td>
      <td><%= vehicle.color %></td>
      <td><%= vehicle.modelo %></td>
      <td><%= vehicle.motor %></td>
      <td><%= vehicle.chasis %></td>
      <td><%= vehicle.serie %></td>
      <td><%= vehicle.fecha_de_compra %></td>
      <td><%= vehicle.contrato %></td>
      <td><%= vehicle.n_soat %></td>
      <td><%= vehicle.vencimiento_soat %></td>
      <td><%= vehicle.n_rtm %></td>
      <td><%= vehicle.vencimiento_rtm %></td>
      <td><%= vehicle.km_cambio_aceite %></td>
      <td><%= vehicle.km_proximocambio %></td>
      <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Destroy', vehicle, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Vehiculo', new_vehicle_path, class: 'btn btn-primary' %>
